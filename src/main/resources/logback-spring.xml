<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty scope="context" name="ELK_ACTIVE" source="elk.active" defaultValue="false"/>
    <springProperty scope="context" name="LOGSTASH_HOST" source="logstash.host" defaultValue="localhost"/>
    <springProperty scope="context" name="LOGSTASH_PORT" source="logstash.tcp-port" defaultValue="5044"/>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="naver-news-spring"/>

    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ,Asia/Seoul} [%thread] %-5level %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <if condition='property("ELK_ACTIVE").equalsIgnoreCase("true")'>
        <then>
            <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
                <destination>${LOGSTASH_HOST}:${LOGSTASH_PORT}</destination>
                <reconnectionDelay>5000</reconnectionDelay>
                <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                    <customFields>{"app":"${APP_NAME}"}</customFields>
                </encoder>
            </appender>
        </then>
    </if>

    <logger name="org.springframework" level="INFO"/>
    <logger name="io.netty" level="INFO"/>

    <if condition='property("ELK_ACTIVE").equalsIgnoreCase("true")'>
        <then>
            <root level="INFO">
                <appender-ref ref="CONSOLE"/>
                <appender-ref ref="FILE"/>
                <appender-ref ref="LOGSTASH"/>
            </root>
        </then>
        <else>
            <root level="INFO">
                <appender-ref ref="CONSOLE"/>
                <appender-ref ref="FILE"/>
            </root>
        </else>
    </if>
</configuration>
